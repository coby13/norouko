<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "Home" %></title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="small-12 small-centered columns">
        <div class="small-4 push-8 columns">
          <div class= "homeupright">
            <%= image_tag "mail.png" %> info@milshield.gr <%= image_tag "phone.png" %> +302109835124

            <div class= "language">
              <%= link_to_unless I18n.locale == :en, "English", locale: "en" %> |
              <%= link_to_unless I18n.locale == :gr, "Ελληνικά", locale: "gr" %>
            </div>

          </div>
        </div>
        <div class="small-8 pull-4 columns">
          <div class="logo">
            <%=link_to image_tag("logomil.png", :alt => "Milshield logo",:width => 900, :height => 900), "/" %>
          </div>
        </div>

      </div>
    </div>
    <nav class="top-bar">
      <ul class="title-area">
        <li class="name"><!-- Leave this empty --></li>
        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li><%= link_to t('menu1'), '/' %></li>
            <li class="divider"></li>
            <li><%= link_to t('menu2'), aboutus_path %></li>
            <li class="divider"></li>
            <li class="has-dropdown"><a href="#"><%= link_to t('menu3') %></a>
            <ul class="dropdown">
              <li class="has-dropdown"><a href="#">Dropdown Level 1a</a></li>
              <li class="has-dropdown"><a href="#">Dropdown Level 1a</a></li>
              <li class="has-dropdown"><a href="#">Dropdown Level 1a</a></li>
            </ul>
            <li class="divider"></li>
            <li><%= link_to t('menu4') %></li>
            <li class="divider"></li>
            <li><%= link_to t('menu5') %></li>
            <li class="divider"></li>
            <li><%= link_to t('menu6'), careers_path %></li>
            <li class="divider"></li>
            <li><%= link_to t('menu7'), contactus_path %></li>
             </ul>
          </ul>
          <!-- Right Nav Section
			    <ul class="right">

			          <li><%= image_tag "greek.png", :class => "language_icon" %></li>
					  <li><%= image_tag "usa.png", :class => "language_icon" %></li>


			    </ul>
			  </section>
			  </ul>  -->

    </nav>

    <%= yield %>
  </div>
  <%= javascript_include_tag "application" %>
    </div>
</body>
</html>




